        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gddatar98"
        app:layout_constraintGuide_percent=".98"
        android:orientation="horizontal"/>




    <LinearLayout
        android:id="@+id/lin4b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/customedittext"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/gdtegakkiri"
        app:layout_constraintRight_toRightOf="@+id/gdtegakkanan"
        app:layout_constraintTop_toTopOf="@+id/gddatar80"
        app:layout_constraintBottom_toBottomOf="@+id/gddatar88">


        <Button
            android:id="@+id/btnupload1"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-medium"
            android:text="UPLOAD 1"
            android:textColor="@color/white"
            android:background="@drawable/custombuttonbox"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnupload2"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-medium"
            android:text="UPLOAD 2"
            android:textColor="@color/white"
