    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/customedittext"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/gdtegakkiri"
        app:layout_constraintRight_toRightOf="@+id/gdtegakkanan"
        app:layout_constraintTop_toTopOf="@+id/gddatar90"
        app:layout_constraintBottom_toBottomOf="@+id/gddatar98">


        <Button
            android:id="@+id/btnsimpan"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-medium"
            android:text="SIMPAN PROPOSAL"
            android:textColor="@color/white"
            android:background="@drawable/custombuttonbox"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>




